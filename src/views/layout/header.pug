#header
    if user
        .pull-left.user-full-name
            a(href='#', style='color: #ffffff; text-decoration: none;') #{user.firstName + ' ' + user.lastName}

    .text-center
        a.logo(href="/")
            img.img.img-responsive(src="/images/logo_02.jpg")
    .pull-right.account-info
        if user && user.avatar 
            .dropdown(style='height: 100%;display:inline-table;vertical-align: top;')
                .avatar.dropdown-toggle(data-toggle="dropdown")
                    img.img.img-responsive.img-circle(src=user.avatarUrl)
                ul.dropdown-menu(style='float: right; right: 0;left: auto;')
                    li
                        a(href='#') Trang cá nhân
                    li.divider
                    li
                        a(href='/user/logout') Đăng xuất
        else
            .dropdown(style='height: 100%;display:inline-table;')
                .avatar.dropdown-toggle(data-toggle="dropdown")
                    i.fa.fa-user-o
                ul.dropdown-menu(style='float: right; right: 0;left: auto;')
                    li
                        a(href='#') Trang cá nhân
                    li.divider
                    li
                        a(href='/user/logout') Đăng xuất
        .dropdown(style='height: 100%;display:inline-table;vertical-align: top;')
            .notification.dropdown-toggle(data-toggle="dropdown")
                i.fa.fa-bell-o
                span#n-unread-noti.n-unread-noti(style='display: none;')
            ul#header-notification-list.dropdown-menu(style='float: right; right: 0;left: auto;')
                li
                    a(href='#') Chưa có thông báo nào