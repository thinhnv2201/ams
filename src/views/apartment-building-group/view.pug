extends ../layout/main
block stylesheets
	link(rel='stylesheet', href='/stylesheets/bootstrap-chosen.css')
block scripts
	script(src='/javascripts/bootstrap-chosen.js')
	script.
		$('.chosen-select').chosen()
		$('.chosen-select-deselect').chosen({ allow_single_deselect: true, disable_search: true })
block content
	.row
		.col-lg-2.col-md-2.col-sm-2.sub-menu
			ul.sub-menu-item.nav.nav-tabs
				li.active
					a(data-toggle='tab', href='#details') Chi tiết
				li
					a(data-toggle='tab', href='#buildings') Tòa nhà
				li
					a(data-toggle='tab', href='#residents') Cư dân
		.col-lg-10.col-md-10.col-sm-10
			.tab-content
				#details.tab-pane.fade.in.active
					.abgs-detail(style='margin-bottom: 15px;')
						header.detail-header
							.icon
								i.fa.fa-eye
							h5.detail-title #{title}
						.body
							.row
								.col-md-6.col-lg-6
									.item-detail
										.icon
											i.fa.fa-address-book-o
										.content #{data.abgName}
								.col-md-6.col-lg-6
									.item-detail
										.icon
											i.fa.fa-user-o
										.content Quản lý: #{data.manager.userName}

							.row
								.col-md-6.col-lg-6
									.item-detail
										.icon
											i.fa.fa-map-marker
										.content Địa chỉ:
											i  #{data.address}
								.col-md-6.col-lg-6
									.item-detail
										.icon
											i.fa.fa-plus-circle
										.content Người tạo: #{data.createdBy.userName}
				#buildings.tab-pane.fade
					.apartment-buildings
						header.detail-header
							.icon
								i.fa.fa-home
							h5.detail-title Danh sách tòa nhà ( #{data.apartmentBuildings.length} tòa )
						.body
							each dt, i in data.apartmentBuildings
								if (i % 2 === 0)
									| <div class="row">
								.col-md-6.col-lg-6
									.apartment-building-item.well
										.building-name.text-center(style='font-weight: bold;') #{dt.buildingName}
										.building-content
											.row
												.col-md-6.col-lg-6
													.item-detail
														.icon
															i.fa.fa-building
														.content Số tầng: #{dt.floor}
												.col-md-6.col-lg-6
													.item-detail
														.icon
															i.fa.fa-area-chart
														.content Diện tích:
															i  #{dt.area}
											.row
												.col-md-6.col-lg-6
													.item-detail
														.icon
															i.fa.fa-user-o
														.content Quản lý: #{dt.manager.userName}
												.col-md-6.col-lg-6
													.item-detail
														.icon
															i.fa.fa-book
														.content Số phòng: X
								if (i % 2 === 1 || i === data.apartmentBuildings.length - 1)
									| </div>
				#buildings.tab-pane.fade
					h3 Cu dan
					p Some content in menu 2.
			

