extends ../layout/main
block stylesheets
	link(rel='stylesheet', href='/stylesheets/jquery.dataTables-custom.css')
	link(rel='stylesheet', href='/stylesheets/bootstrap-chosen.css')
block scripts
	script(src='/javascripts/jquery.dataTables.min.js')
	script(src='/javascripts/bootstrap-chosen.js')
	script.
		$(function() {
		$('.chosen-select').chosen();
		$('.chosen-select-deselect').chosen({ allow_single_deselect: true, disable_search: true });
		$('#slider-list').DataTable();
		});
block content
	.row
		.col-lg-12
			.box.dark
				header
					.icons
						i.fa.fa-table
					h5 #{title}
				.user-actions
					a.btn.btn-success(href='/apartment-building-group/create') Tạo mới
				table#abg-list.table.table-responsive.display(cellspacing='0', width='100%')
					thead
						tr
							th.hidden-xs STT
							th Tên chung cư
							th Địa chỉ
							th Người quản lý
							th Người tạo
							th.text-center Trạng thái
							th.text-center.no-sort Hành động
					tbody
						- var i = 1;
						each dt in data
							tr
								td.hidden-xs #{i}
								td #{dt.abgName}
								td #{dt.address}
								td #{dt.manager.userName}
								td #{dt.createdAt.userName}
								td.text-center #{dt.status ? 'Public' : 'Draft'}
								td(align='center')
									a.u-action.btn.btn-default
										em.fa.fa-eye
									a.u-action.btn.btn-default
										em.fa.fa-pencil
									a.u-action.btn.btn-danger
										em.fa.fa-trash