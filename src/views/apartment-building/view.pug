extends ../layout/main
block stylesheets
	link(rel='stylesheet', href='/stylesheets/bootstrap-chosen.css')
block scripts
	script(src='/javascripts/bootstrap-chosen.js')
	script.
		$('.chosen-select').chosen()
		$('.chosen-select-deselect').chosen({ allow_single_deselect: true, disable_search: true })
block content
	.row
		.col-lg-2.col-md-2.col-sm-2.sub-menu
			ul.sub-menu-item.nav.nav-tabs
				li.active
					a(data-toggle='tab', href='#details') Chi tiết
				li
					a(data-toggle='tab', href='#apartments') Căn hộ
		.col-lg-10.col-md-10.col-sm-10
			.tab-content
				#details.tab-pane.fade.in.active
					.abgs-detail(style='margin-bottom: 15px;')
						header.detail-header
							.icon
								i.fa.fa-eye
							h5.detail-title #{title}
						.body
							.row
								.col-md-6.col-lg-6
									.item-detail
										.icon
											i.fa.fa-address-book-o
										.content #{data.buildingName}
								.col-md-6.col-lg-6
									.item-detail
										.icon
											i.fa.fa-address-book-o
										.content Khu chung cư: #{data.apartmentBuildingGroup.abgName}

							.row
								.col-md-6.col-lg-6
									.item-detail
										.icon
											i.fa.fa-map-marker
										.content Diện tích:
											i  #{data.area}
								.col-md-6.col-lg-6
									.item-detail
										.icon
											i.fa.fa-user-o
										.content Quản lý: #{data.manager.userName}
							.row
								.col-md-6.col-lg-6
									.item-detail
										.icon
											i.fa.fa-building
										.content Số tầng : #{data.floor}
								.col-md-6.col-lg-6
									.item-detail
										.icon
											i.fa.fa-user-o
										.content Người tạo: #{data.createdBy.userName}
				#apartments.tab-pane.fade
					.apartments
						header.detail-header
							.icon
								i.fa.fa-home
							h5.detail-title Danh sách căn hộ ( #{data.apartments.length} căn )
						.body
							each dt, i in data.apartments
								if (i % 3 === 0)
									| <div class="row">
								.col-md-4.col-lg-4
									.apartment-item.well
										.a-name #{dt.apartmentName}
										.a-content
											.a-content-item #{dt.manager ? dt.manager.userName : 'Trống'}
											.a-content-item
												i.fa.fa-area-chart
												| #{dt.area ? dt.area : 0} (m2)
											.a-content-item
												i.fa.fa-users
												| #{dt.users ? dt.users.length : 0}
										
								if (i % 3 === 2 || i === data.apartments.length - 1)
									| </div>

